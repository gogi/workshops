%h2.table_name 
  Categories

%table.table.table-hover
  %tr
    %th Category name
    %th Products
    %th
    %th
    %th

  - categories.each do |category|
    %tr
      %td= category.name
      %td
        %span.badge.glyphicon.glyphicon-play= "  #{category.products.count}"
      %td= link_to 'Show', category, class: 'btn btn-default'
      - if current_user.present? && current_user.admin?
        %td= link_to 'Edit', edit_category_path(category)
        %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }

%br
- if current_user.present? && current_user.admin?
  = link_to 'New Category', new_category_path
