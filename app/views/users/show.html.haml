%h1.table_name
  = "#{user.firstname}'s info"
%p
%table.table
  %tr.table-header
    %td
      Name
    %td
      Lastname
    %td
      Email
    %td
      Total reviews
    %td
      Member since
  %tr
    %td
      = user.firstname
    %td
      = user.lastname
    %td
      = user.email
    %td
      = user.reviews.count
    %td
      = user.created_at.strftime("%d-%m-%y")

%h2.table_name Most recent activities

%table.table
  %tr.table-header
    %td
      Product
    %td
      Review
    %td
      Rate
    %td
      Date
  - last_reviews.each do |review|
    %tr
      %td
        = review.product.title
      %td
        = review.content
      %td
        = review.rating
      %td
        = review.created_at.strftime("%d-%m-%y")


%p
  = link_to 'All users', users_path, class: 'btn btn-default'